{
  "name": "tts-telegram",
  "version": "1.0.0",
  "description": "Text-to-Speech Telegram Reader - Đọc tin nhắn Telegram bằng giọng nói",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:api": "pnpm --filter @tts-telegram/api dev",
    "dev:web": "pnpm --filter @tts-telegram/web dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "keywords": [
    "telegram",
    "tts",
    "text-to-speech",
    "edge-tts",
    "vietnamese"
  ],
  "author": "Thành",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
